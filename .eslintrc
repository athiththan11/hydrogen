{
	"extends": "oclif",
	"rules": {
		"quotes": [
			2,
			"single",
			{
				"avoidEscape": true
			}
		],
		"semi": [2, "always"],
		"indent": [2, "tab"],
		"object-curly-spacing": [
			2,
			"always",
			{
				"arraysInObjects": false
			}
		],
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "never",
					"typeLiterals": "ignore"
				},
				"esSpecCompliant": true
			}
		]
	}
}
